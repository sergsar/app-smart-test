/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@app-smart-test/api": ["projects/app-smart-test/api/index"],
      "@app-smart-test/api/*": ["projects/app-smart-test/api/*"],
      "@app-smart-test/contexts": ["projects/app-smart-test/contexts/index"],
      "@app-smart-test/contexts/*": [
        "projects/app-smart-test/contexts/*"
      ],
      "@app-smart-test/entities": ["projects/app-smart-test/entities/index"],
      "@app-smart-test/entities/*": [
        "projects/app-smart-test/entities/*"
      ],
      "@app-smart-test/marvel-characters": ["projects/app-smart-test/marvel-characters/index"],
      "@app-smart-test/marvel-characters/*": ["projects/app-smart-test/marvel-characters/*"],
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
